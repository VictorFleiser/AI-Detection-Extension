{
  "manifest_version": 3,
  "name": "AI Text Detector (Ollama)",
  "version": "0.15",
  "description": "Uses Ollama to extract and evaluate text from screenshots.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "scripting",
    "storage",
    "offscreen",
    "downloads",
    "declarativeNetRequest"
  ],
  "web_accessible_resources": [{
    "resources": ["create_tabs.js", "posts.json"],
    "matches": ["https://www.reddit.com/*", "https://x.com/*", "https://www.jeuxvideo.com/*"]
  }],
  "host_permissions": [
    "http://localhost:11434/",
    "https://www.reddit.com/*",
    "https://x.com/*",
    "https://www.jeuxvideo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}